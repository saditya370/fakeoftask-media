<div class= "my-3 mb-3" id="<%= dom_id post %>">
  <p>
    
    
    <%if post.photo.attached?%>
        <%=image_tag post.photo ,width: "150px" ,class: " img-thumbnail selector"%>

    <%end%>
  </p>

</div>

<style>
.selector {
    user-drag: none;
    -webkit-user-drag: none;
    user-select: none;
    -moz-user-select: none;
    -webkit-user-select: none;
    -ms-user-select: none;
}
</style>
